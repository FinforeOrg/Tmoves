- content_for :title, "User List"
%span#welcome User List
%br/
.block
  .block-header
    = link_to "Create New User", new_admin_user_path, {:class => 'link-custom'}
  #block-table.block-main
    %table.block-main-table
      %tbody
        %tr
          %th{:width => "80%"} Username
          %th Action
        - @users.each do |user|
          %tr
            %td= user.email
            %td
              = link_to image_tag("icon-edit.png", {:border => 0}), edit_admin_user_path(user)
              %span Edit
              |
              \#{link_to image_tag("icon-cancel.png", {:border => 0}), admin_user_path({:id=>user.id,:destroy=>true}), :confirm => 'Are you sure?', :method => :delete}
              %span Delete