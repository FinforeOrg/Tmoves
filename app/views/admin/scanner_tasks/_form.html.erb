<style>
.form-container, .form-container *{
  list-style: none outside none;
}

.form-container ul li
{
    float: left;
    width: 20em;
}

.form-container ul li span
{

   left: 30px;
    position: relative;
    top: -25px;

}
</style>

<div class="block-main" id="block-form">
  <%= form_for [:admin,@scanner_task] do |f| %>
    <% if @scanner_task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@scanner_task.errors.count, "error") %> prohibited this stream_task from being saved:</h2>
        <ul>
          <% @scanner_task.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p class="header">Select reference keywords below</p>
    <div class="form-container">
      <ul>
      <% @lists.each do |key| %>
       <li><%= check_box_tag "keywords[]", key %> <span><%= key %></span></li>
      <% end %>
      </ul>
      <div style="clear:both;"&nbsp;</div>
    </div>
    <br/>
    <p class="header">Select twitter</p>
    <div class="form-container">
     <%= f.collection_select(:scanner_account_id, @twitters,:id,:username, {:include_blank => 'Select Account'}) %>
     <%= link_to "register twitter", auth_admin_scanner_accounts_path, :target => "_blank" %>
    </div>
    <br/>
    <br/>
    <p class="header">&nbsp;</p>
    <div class="form-container">
      <input type="submit" name="commit" value="Save" class="button" id="submit" style="left:0px"/>
      <div id="cancel" class="button" style="left:90px">
        <%= link_to 'Cancel', admin_scanner_tasks_path, {:class => "link-blank",:style=>"text-decoration:none;color:white;"} %>
      </div>
    </div>
  <% end %>
</div>
