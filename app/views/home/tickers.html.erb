<div class="block">
  <div class="block-header">
    <%= @category.title %> Tickers Statistics
  </div>
  <div id="block-table" class="block-main">
   <div>
     <h2 class="month1"></h2><br/>
     <h2 class="month6"></h2><br/>
   </div>

   <div id="tab-history">
     <div class="monthly_chart" style="height:250px;">
        <%= image_tag("indicator.gif") %> loading 6 months chart ...
     </div>
     <div class="weekly_chart" style="height:250px;">
       <%= image_tag("indicator.gif") %> loading 10 weeks chart ...
     </div>
     <div class="last_month_chart" style="height:250px;">
        <%= image_tag("indicator.gif") %> loading last month chart ...
     </div>
   </div>

</div>

<script type='text/javascript' src='http://www.google.com/jsapi'></script>
<script type='text/javascript'>
google.load('visualization', '1', {'packages':['corechart','annotatedtimeline']});
$(document).ready(function(){

  $(".weekly_chart").stickChart({
     url: "/statistics/<%= @category.title.gsub(/\s/,'-') %>/<%= @category.id.to_s %>.json",
     parameters: {"type" : "weekly", "tickers": true},
     title: "NO. OF TWEETS, LAST 10 WEEKS",
     api: google,
     displayLegend: "top",
     vAxes: null,
     hAxis: {textStyle:{fontSize:11}}
  });

  $(".monthly_chart").stickChart({
     url: "/statistics/<%= @category.title.gsub(/\s/,'-') %>/<%= @category.id.to_s %>.json",
     parameters: {"type" : "monthly", "tickers": true},
     title: "NO. OF TWEETS, LAST 6 MONTHS",
     api: google,
     displayLegend: "top",
     vAxes: null,
     hAxis: {textStyle:{fontSize:11}}
  });

  $(".last_month_chart").stickChart({
     url: "/statistics/<%= @category.title.gsub(/\s/,'-') %>/<%= @category.id.to_s %>.json",
     parameters: {"type" : "monthly", "tickers": true, "numb" : 1},
     title: "NO. OF TWEETS, LAST MONTH",
     api: google,
     displayLegend: "top",
     vAxes: null,
     hAxis: {textStyle:{fontSize:11}}
  });

});

</script>
